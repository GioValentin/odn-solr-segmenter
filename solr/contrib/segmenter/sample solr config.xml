<requestHandler name="/select2" class="solr.SearchHandler">
  <lst name="defaults">
    <str name="echoParams">explicit</str>
    <str name="q">{!seg defType=dismax v=$qq}</str>
    <str name="qf">vehicle_make_s vehicle_model_s vehicle_base_model_s vehicle_type_s vehicle_year_s vehicle_size_s</str>
  </lst>
</requestHandler>
  
  
  
